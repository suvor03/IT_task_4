<Window x:Class="TradePointSimulation.TradePointWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Trade Point Simulation" Height="450" Width="800">
    <Grid>
        <ListBox x:Name="productListBox" HorizontalAlignment="Left" Height="300" Margin="10,10,0,0" VerticalAlignment="Top" Width="300"/>
        <Button x:Name="buyButton" Content="Buy" HorizontalAlignment="Left" Margin="10,320,0,0" VerticalAlignment="Top" Width="75" Click="buyButton_Click"/>
        <Label Content="Customer Name:" HorizontalAlignment="Left" Margin="10,380,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="customerNameTextBox" HorizontalAlignment="Left" Margin="100,380,0,0" VerticalAlignment="Top" Width="120"/>
    </Grid>
</Window>